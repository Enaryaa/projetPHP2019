!!!292098.php!!!	request(in incoming : array) : void
		if ( ! is_array($incoming))
		{
			// Send Error
			return;
		}

		$this->data = array();

		foreach ($incoming as $key => $value)
		{
			$this->data[$key] = $this->values_parsing($value);
		}
!!!292226.php!!!	set_debug(in flag : bool = TRUE) : void
