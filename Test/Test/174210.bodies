!!!524674.php!!!	get_contact(in id :  = null)
		if (isset($id)){
			$this->db->select('*')
				->from('contacts')
				->where('id', $id)
				->limit(1);
			$query = $this->db->get();

			if($query->num_rows() == 1)
				return $query->row();
			else
				return false;
		}else{
			$this->db->select('*')
				->from('contacts');
			$query = $this->db->get();
			return $query->result();
		}
